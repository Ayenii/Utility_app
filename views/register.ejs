<%- include('frame.ejs') %>
    <div class = "center center-pos">
        <h1>Register Today!</h1>
        <form method="POST" action="">
            <div class="two-col">
                <div class="txt_field col1">
                    <input type="text" name="first_name" required>
                    <label for="first_name">First Name</label>
                </div>
                <div class="txt_field col2">
                    <input type="text" name="last_name"  required>
                    <label for="last_name">Last Name</label>
                </div>
            </div>
            <div class="two-col">
                <div class="txt_field col1">
                    <input type="text" name="username" required>
                    <label for="username">Username</label>
                </div>
                <div class="txt_field col2">
                    <input type="text" name="email" required>
                    <label for="email">Email</label>
                </div>
            </div>
            <div class="two-col">
                <div class="txt_field col1">
                    <input type="password" name="password" required>
                    <label for="password">Desired Password</label>
                </div>
                <div class="txt_field col2">
                    <input type="password" name="confirm_password" required>
                    <label for="confirm_password">Confirm Password</label>
                </div>
            </div>
                <input type="submit" value="Register"> 
                <div class="signup_link">Already a Member?
                    <a href="login">Login</a>
                </div>
                <p> Your password must include the following:
                    <ul>
                        <li>At least one capital letter</li>
                        <li>At least one lowercase letter</li>
                        <li>At least one number</li>
                        <li>At least one of the following symbols: @$!%*#?&</li>
                        <li>Between 8 and 20 characters</li>
                    </ul>           
        </form>
    </div>
    